{
  "compilerOptions": {
    "incremental": true,
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["esnext"],
    "moduleDetection": "force",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@stacksjs/*": ["../storage/framework/core/*/dist"],
      "stacks/*": ["../storage/framework/core/*/dist"],
      "buddy": ["../storage/framework/core/buddy/dist/index.js"],
      "buddy/*": ["../storage/framework/core/buddy/dist/*"],
      "Actions/*": ["../app/Actions/*"],
      "Jobs/*": ["../app/Jobs/*"],
      "./app/*": ["../app/*"], // it's outside the dist folder
      "~/*": ["../*"],
      "../../../env": ["../storage/framework/env.ts"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "vite-plugin-layouts/client",
      "@intlify/unplugin-vue-i18n/messages"
    ],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["./*.ts", "./src/*.ts", "./*.d.ts", "./*.js"]
}
